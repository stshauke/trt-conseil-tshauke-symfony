{% extends 'base.html.twig' %}

{% block title %}Annonce{% endblock %}

{% block body %}
    <div class="container">
         <h2 class="text-center mt-5 mb-3"> Modification de l'annonce numéro:
        <span class="text-success">{{ annonce.id }}</span></h2>
        
        <div class="card">
            <div class="card-header">
                <div class="text-center">
                   
                </div>
            </div>
             {{ form_start(form) }}
            <div class="card-body">                
               
                <div class="row">
                    {% for field in form %}
                        {% if field.vars.name != '_token' %}
                         {% if field.vars.name == 'status' 
                         or field.vars.name == 'roles' or field.vars.name == 'dateAnnonce' %}
                {% do form[field.vars.name].setRendered() %}
            {% else %}
                            <div class="col-md-3 mb-3 label-column">
                                {{ form_label(field) }}
                            </div>
                            <div class="col-md-9 mb-3">
                                {{ form_widget(field) }}
                            </div>
                        {% endif %}
                     {% endif %}   
                    {% endfor %}
                </div>
               
            </div>
            <div class="card-footer">
                <div class="text-center">
                    <a href="{{ path('app_annonce_index') }}" class="btn btn-outline-secondary me-2">Retour à la liste</a>
                    <button class="btn btn-outline-success me-2">{{ button_label|default('Mettre à jour') }}</button>
                </div>
            </div>
             {{ form_end(form) }}
        </div>
    </div>
{% endblock %}