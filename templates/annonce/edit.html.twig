
{% extends 'base.html.twig' %}
 
{% block title %}Annonce{% endblock %}
 
{% block body %}
    <div class="container">
        <h2 class="text-center mt-5 mb-5"></h2>
        <div class="card">
            <div class="card-header">
                <div class="text-center">
               
                   <h3 class="text-primary"> Modification de l'annonce numéro: <b> {{ annonce.id}}</b></h3>
                </div>
            </div>
            <div class="card-body">

                {{ form_start(form) }}
                    {{ form_widget(form) }}
                    
            
            </div>
             <div class="card-footer">
              <div class="text-center">
                    <a href="{{ path('app_annonce_index') }}" class="btn btn-outline-secondary me-2">Retour à la liste</a>
                   <button class="btn btn-outline-success me-2">{{ button_label|default('Mettre à jour') }}</button>
                {{ form_end(form) }}
                </div>
             </div>
        </div>
    </div>
{% endblock %}