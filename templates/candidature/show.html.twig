{% extends 'base.html.twig' %}
 
{% block title %}candidature{% endblock %}
 
{% block body %}
    <div class="container">
        <h2 class="text-center mt-5 mb-3">Afficher liste des modules</h2>
        <div class="card">
            <div class="card-header">
                <div class="text-center">
               
                   <h3 class="text-primary"> Affichage de l'candidature numéro: <b> {{ candidature.id}}</b></h3>
                </div>
            </div>
            <div class="card-body">
    <div class="row">
    <div class="col-sm-3">
        <b >ID:</b>
    </div>
    <div class="col-sm-9">
        <p>{{ candidature.id}}</p>
    </div>
</div>

<div class="row">
    <div class="col-sm-3">
        <b >Approbation:</b>
    </div>
    <div class="col-sm-9">
        <p>{{ candidature.approuver ? 'Oui' : 'Non' }}</p>
    </div>
</div>

<div class="row">
    <div class="col-sm-3">
        <b >Date d'approbation:</b>
    </div>
    <div class="col-sm-9">
        <p>{{ candidature.dateApprobation ? candidature.dateApprobation|date('Y-m-d') : '' }}</p>
    </div>
</div>




            
</div>

             <div class="card-footer">
              <div class="text-center">
                    <a href="{{ path('app_candidature_index') }}" class="btn btn-secondary me-2">Retour à la liste</a>
                    <a href="{{ path('app_candidature_edit', {'id': candidature.id}) }}" class="btn btn-primary">Edit</a>
                </div>
             </div>
        </div>
    </div>
{% endblock %}


