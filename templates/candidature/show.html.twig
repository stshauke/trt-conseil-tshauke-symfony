{% extends 'base.html.twig' %}
 
{% block title %}candidature{% endblock %}
 
{% block body %}
    <div class="container">
        <h2 class="text-center mt-5 mb-3">Affichage de la candidature numéro:  <span class="text-success">{{ candidature.id }}</span></h2>
        <div class="card">
            <div class="card-header">
                <div class="text-center">
               
                </div>
            </div>
            <div class="card-body">
    <div class="row">
    <div class="col-sm-3">
        <b >ID:</b>
    </div>
    <div class="col-sm-9">
        <p>{{ candidature.id}}</p>
    </div>
</div>

<div class="row">
    <div class="col-sm-3">
        <b >Candidat:</b>
    </div>
    <div class="col-sm-9">
        <p>{{ candidature.utilisateur.prenom }} {{ candidature.utilisateur.nom }}</p>
    </div>
</div>

<div class="row">
    <div class="col-sm-3">
        <b >Date d'approbation:</b>
    </div>
    <div class="col-sm-9">
        <p>{{ candidature.dateApprobation ? candidature.dateApprobation|date('Y-m-d') : '' }}</p>
    </div>
</div>

<div class="row">
    <div class="col-sm-3">
        <b >Description Annonce:</b>
    </div>
    <div class="col-sm-9">
        <p>{{ candidature.annonce.DescriptionAnnonce }}</p>
    </div>
</div>
<div class="row">
    <div class="col-sm-3">
        <b >Poste demandée:</b>
    </div>
    <div class="col-sm-9">
        <p>{{ candidature.annonce.PosteDemandee }}</p>
    </div>
</div>
<div class="row">
    <div class="col-sm-3">
        <b >Lieu de travail:</b>
    </div>
    <div class="col-sm-9">
        <p>{{ candidature.annonce.LieuTravail }}</p>
    </div>
</div>
<div class="row">
    <div class="col-sm-3">
        <b >Recruteur:</b>
    </div>
    <div class="col-sm-9">
        <p>{{ candidature.annonce.utilisateur.prenom }} {{ candidature.annonce.utilisateur.nom }}</p>
    </div>
</div>            
</div>

             <div class="card-footer">
              <div class="text-center">
                    <a href="{{ path('app_candidature_index') }}" class="btn btn-secondary me-2">Retour à la liste</a>

                </div>
             </div>
        </div>
    </div>
{% endblock %}


